@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Alumnos</h2>

<hr />


<a href="@Url.Action("Form", "Alumno")" class="btn btn-dark">Agregar</a>

<hr />

<div class="conteiner">

    <table class="table table-dark table-striped">

        <thead class="table-danger">

            <tr class="table-dark">

                <th>IdAlumno</th>
                <th>Nombre</th>
                <th>ApellidoPaterno</th>
                <th>ApellidoMaterno</th>
                <th>Actualizar</th>
                <th>Eliminar</th>

            </tr>



        </thead>

        <tbody>



            @foreach(ML.Alumno alumno in Model.Alumnos)
            {

                <tr>

                    <td>@alumno.IdAlumno</td>
                    <td>@alumno.Nombre</td>
                    <td>@alumno.ApellidoPaterno</td>
                    <td>@alumno.ApellidoMaterno</td>
                    <td><a class="btn btn-dark" href="@Url.Action("Form", "Alumno", new { IdAlumno = alumno.IdAlumno })">Actualizar</a></td>
                    <td><a class="btn btn-dark" href="@Url.Action("Delete", "Alumno", new { IdAlumno = alumno.IdAlumno })" onclick="return confirm('Estas seguro que deseas ELIMINAR este REGISTRO');">Eliminar</a></td>


                </tr>



            }
        </tbody>


    </table> 


</div>
@model ML.Materia
@{
    ViewBag.Title = "GetMateriaNoAsignada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materias NO asignadas</h2>
  

<hr />

<div class="conteiner">

    <table class="table table-warning">

        <thead class="table table-dark">

            <tr class="table table-warning">

                <th>Id Materia</th>
                <th>Nombre Materia</th>
                <th>Costo materia</th>
                <th>Asignar Materia</th>

            </tr>

        </thead>

        <tbody>

            @foreach (ML.Materia materia in Model.Materias) 
            { 

                <tr>@materia.IdMateria</tr>
                <<tr>@materia.Nombre</tr>
                <tr>@materia.Costo</tr>
                <tr><input class="form-check-input" type="checkbox" id="check" value="" aria-label="..."></tr>
            
            }


        </tbody>


    </table>



</div>



<hr />

<script>
    //Funcion para sumar las materias

    function sumar() {

        var total = 0;

        $(".monto").each(function () {

            if (isNaN(parseFloat($(this).val()))) {

                total += 0;

            } else {

                total += parseFloat($(this).val());

            }

        });

        //alert(total);
        document.getElementById('spTotal').innerHTML = total;

    } 




</script>

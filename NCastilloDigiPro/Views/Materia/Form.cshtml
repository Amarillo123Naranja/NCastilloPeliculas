@model ML.Materia
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Materia</h2>
<h4 class="text-center">Ingresar los campos requeridos</h4>

@using(Html.BeginForm("Form", "Materia", FormMethod.Post, new {enctype = "multipart/form-data" }))
    {
    @Html.HiddenFor(model => model.IdMateria)

    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new {@class = "form-control" })
        </div>

        <div class="col-md-4">
            @Html.LabelFor(model => model.Costo)
            @Html.TextBoxFor(model => model.Costo, new { @class = "form-control" })

        </div>
      

    </div>

    <button class="btn btn-dark" type="submit">Guardar</button>
    <a class="btn btn-dark" href="@Url.Action("GetAll", "Materia")">Regresar</a>


    }
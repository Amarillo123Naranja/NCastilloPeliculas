@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">MATERIAS</h2>

<hr />

<a href=" @Url.Action("Form", "Materia")" class="btn btn-dark">Agregar</a>

<hr/>

<div class="container">

    <table class="table table-dark table-striped">

        <thead class="table-danger">
            <tr class="table-danger">

                <th>IdMateria</th>
                <th>Nombre</th>
                <th>Costo</th>
                <th>Actualizar</th>
                <th>Eliminar</th>

            </tr>


        </thead>

        <tbody>

            @foreach (ML.Materia materia in Model.Materias)
            {
                <tr>

                    <td>@materia.IdMateria</td>
                    <td>@materia.Nombre</td>
                    <td>@materia.Costo</td>
                    <td><a class="btn btn-dark" href="@Url.Action("Form", "Materia", new {IdMateria = materia.IdMateria})">Actualizar</a></td>
                    <td><a class="btn btn-dark" href="@Url.Action("Delete", "Materia", new { IdMateria = materia.IdMateria })" onclick="return confirm('Estas seguro que deseas ELIMINAR este REGISTRO');">Eliminar</a></td>

                </tr>
        }




            </tbody>

        </table>



</div>